          "code": {
            "description": "Код ошибки приложения",
            "type": "integer"
          },
          "message": {
            "description": "Краткое описание ошибки",
            "type": "string"
          }
        },
        "type": "object"
      },
      "GenericError": {
        "properties": {
          "error": {
            "$ref": "#/components/schemas/Error"
          }
        },
        "type": "object"
      },
      "TestServices_ErrorResponse": {
        "properties": {
          "error": {
            "description": "Текст сообщения об ошибке",
            "type": "string"
          }
        },
        "type": "object"
      },
      "TestServices_SuccessResponse": {
        "properties": {
          "data": {
            "description": "Массив с данными",
            "items": {
              "type": "string"
            },
            "type": "array"
          }
        },
        "type": "object"
      },
      "Биллинг_BillingInfo": {
        "properties": {
          "account": {
            "type": "string"
          },
